@using IzmirGaz.Shared.Utilities.Results.ComplexTypes
@model IzmirGaz.Entities.Dtos.CompanyListDto
@{

    Layout = "_Layout";
    ViewBag.Title = "Şirtketler  Index";
}
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="companyTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Şirket Adı</th>
                            <th>Telefon</th>
                            <th>Aktif mi</th>
                            <th>Silinmiş mi?</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturulma Tarihi</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Şirket Adı</th>
                            <th>Telefon</th>
                            <th>Aktif mi</th>
                            <th>Silinmiş mi?</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturulma Tarihi</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var company in Model.Companies)
                        {
                            <tr>
                                <td>@company.Id</td>
                                <td>@company.CompanyName</td>
                                <td>@company.CompanyPhoneNumber</td>
                                <td>@company.IsActive</td>
                                <td>@company.IsDeleted</td>
                                <td>
                                    @if (company.CreatedDate <= DateTime.Now)
                                    {
                                        // Exparted
                                    }
                            </td>
                            <td>@company.CompanyPerformanceReport</td>
                        </tr>
                    }




                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger">
        @Model.Message<br/>
        Anasayfa için  <a class="alert-link" asp-controller="Home" asp-area="Admin" asp-action="Index">tıklayınız</a>
    </div>
}

    @section Scripts
{
        <script>
            $(document).ready(function () {
                $('#companyTable').DataTable();
            });

        </script>

    }
